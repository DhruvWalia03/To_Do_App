<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingLeft="10dp"
    android:paddingEnd="10dp">

    <EditText
        android:id="@+id/nameoftask1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:hint="Enter Title for the Task"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:id="@+id/time_picker"
        android:timePickerMode="clock"
        android:headerBackground="@color/colorAcent"
        android:numbersSelectorColor="@color/colorAcent"/>
    <Button
        android:id="@+id/buttonview3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorAcent"
        android:text="DONE"
        android:textSize="16sp"
        android:textColor="@android:color/white"/>

</LinearLayout>